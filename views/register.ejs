<% include partials/header %>

    <h1>Register</h1>
    <div id="reg-form" class="logbl">
        <form class="logform" action="/register" method="post">
            <input id="reg-user" type="text" name="username" placeholder="Username" required />
            <span class="reg-note">a-Z, [_-], 4-16 characters</span>
            <input id="reg-pass" type="password" name="password" placeholder="Password" required />
            <span class="reg-note">1 uppercase, 1 lowercase, 1 digit, 8-512 characters</span>
            <button id="reg-btn" class="lnk-btn" type="submit">Register</button>
        </form>
    </div>

